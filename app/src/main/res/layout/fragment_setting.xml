<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/default_background"
    android:orientation="vertical"
    tools:context="kkt.com.joggers.fragment.SettingFragment">

    <Switch
        android:id="@+id/stopOnCalling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fragment_widget_margin"
        android:text="운동 중 전화 오면 일시중지" />

    <Switch
        android:id="@+id/vibration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fragment_widget_margin"
        android:text="진동 사용"
        android:visibility="invisible" />

    <Switch
        android:id="@+id/notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fragment_widget_margin"
        android:text="앱 알림 받기" />

    <Switch
        android:id="@+id/musicAutoPlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fragment_widget_margin"
        android:text="음악 자동재생"
        android:visibility="invisible" />

</LinearLayout>
