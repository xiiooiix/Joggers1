<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="kkt.com.joggers.fragment.MainFragment">

    <android.support.v7.widget.CardView
        android:id="@+id/running"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="@dimen/main_cardview_layout_margin"
        android:layout_marginEnd="@dimen/main_cardview_layout_margin"
        android:layout_marginStart="@dimen/main_cardview_layout_margin"
        android:layout_marginTop="@dimen/main_cardview_layout_margin_top">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/main_card_view_default_color" />

        <ImageView
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:src="@drawable/balloon1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_margin="25dp"
            android:text="Running!!"
            android:textColor="@color/main_cardview_text"
            android:textSize="50sp"
            android:textStyle="bold|italic" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_walker_or_runner_sportive_stick_man" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/today_record"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="@dimen/main_cardview_layout_margin">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/main_card_view_default_color" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_margin="20dp"
            android:src="@drawable/balloon2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_margin="25dp"
            android:text="Today's\nRecord ?"
            android:textColor="@color/main_cardview_text"
            android:textSize="40sp"
            android:textStyle="bold|italic" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_scoreboard" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/daily_record"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="@dimen/main_cardview_layout_margin">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/main_card_view_default_color" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_margin="20dp"
            android:src="@drawable/balloon2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_margin="25dp"
            android:text="Daily\nRecord ?"
            android:textColor="@color/main_cardview_text"
            android:textSize="40sp"
            android:textStyle="bold|italic" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_annual" />
    </android.support.v7.widget.CardView>

</LinearLayout>
